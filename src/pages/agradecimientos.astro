---
import BaseLayout from '../layouts/BaseLayout.astro';
import acknowledgmentsData from '../data/acknowledgments.json';
---

<BaseLayout 
  title="acknowledgments - Francisco Terroba"
  description="A heartfelt thank you to all the people who have shaped my journey as a software engineer, writer, and person."
  lang="en"
>
  <div>
    <section class="pt-32 pb-4 theme-bg">
      <div class="max-w-7xl mx-auto px-8 lg:px-12">
        <div class="text-center mb-16">
          <h1 class="text-5xl lg:text-7xl font-bold theme-text mb-8" data-es="agradecimientos" data-en="acknowledgments">
            acknowledgments
          </h1>
          <p class="text-xl lg:text-2xl theme-text-70 max-w-4xl mx-auto leading-relaxed" data-es="a todas las personas que han moldeado mi camino como desarrollador, escritor y persona" data-en="to all the people who have shaped my journey as a software engineer, writer, and person">
            to all the people who have shaped my journey as a software engineer, writer, and person
          </p>
        </div>
      </div>
    </section>

    <section class="py-20 bg-gradient-to-br from-brand-light/10 to-brand-green/10">
      <div class="max-w-7xl mx-auto px-8 lg:px-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {acknowledgmentsData.acknowledgments.map((acknowledgment) => (
            <div class={`bg-gradient-to-br ${acknowledgment.gradient} dark:${acknowledgment.darkGradient} rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:scale-105 group`}>
              <div class="text-center mb-6">
                <div class="w-16 h-16 bg-gradient-to-br from-brand-green/20 to-brand-light/30 rounded-2xl mb-4 flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300">
                  <span class="text-3xl">{acknowledgment.icon}</span>
                </div>
                 <h3 class="text-xl font-bold theme-text mb-2" data-es={acknowledgment.title.es} data-en={acknowledgment.title.en}>
                   {acknowledgment.title.en}
                 </h3>
                 <p class="text-sm theme-text-70 font-medium" data-es={acknowledgment.subtitle.es} data-en={acknowledgment.subtitle.en}>
                   {acknowledgment.subtitle.en}
                 </p>
               </div>
               <p class="text-sm theme-text-80 leading-relaxed text-center" data-es={acknowledgment.message.es} data-en={acknowledgment.message.en}>
                 {acknowledgment.message.en}
               </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>

  <style>
    [data-theme="dark"] * {
      color: #ffffff !important;
    }
    
    [data-theme="dark"] .theme-text {
      color: #ffffff !important;
    }
    
    [data-theme="dark"] .theme-text-80 {
      color: #ffffff !important;
    }
    
    [data-theme="dark"] .theme-text-70 {
      color: #ffffff !important;
    }
    
    [data-theme="dark"] .theme-text-60 {
      color: rgba(255, 255, 255, 0.8) !important;
    }

    .group:hover .group-hover\:scale-110 {
      transform: scale(1.1);
    }

    .transition-all {
      transition: all 0.3s ease;
    }

    .transition-transform {
      transition: transform 0.3s ease;
    }

    .duration-300 {
      transition-duration: 300ms;
    }

    .duration-500 {
      transition-duration: 500ms;
    }

    @keyframes gradient-shift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .bg-gradient-to-br {
      background-size: 200% 200%;
      animation: gradient-shift 8s ease infinite;
    }
  </style>
</BaseLayout>
