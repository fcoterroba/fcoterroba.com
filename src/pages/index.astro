<style>
  * {
    transition: all 0.3s ease;
  }
  
  body {
    overflow-x: hidden;
    overflow-y: auto;
  }

  .slider-container {
    overflow: hidden;
    width: 100%;
  }
  
  .slider-track {
    display: flex;
    gap: 1.5rem;
    animation: scroll 30s linear infinite;
    width: max-content;
  }
  
  .slider-item {
    flex-shrink: 0;
  }
  
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .slider-track:hover {
    animation-play-state: paused;
  }
</style>


