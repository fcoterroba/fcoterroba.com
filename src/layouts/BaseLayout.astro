      [data-theme="light"] {
        --section-bg-white: #ffffff;
        --section-bg-light: #f8f9fa;
        --text-brand-gray: #2c2c2c;
        --text-brand-gray-80: rgba(44, 44, 44, 0.8);
        --text-brand-gray-70: rgba(44, 44, 44, 0.7);
        --text-brand-gray-60: rgba(44, 44, 44, 0.6);
      }

