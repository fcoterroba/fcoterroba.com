---
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  lang?: string;
  image?: string;
  type?: string;
  canonical?: string;
}

const {
  title,
  description,
  lang = 'es',
  image = '/og-image.jpg',
  type = 'website',
  canonical = Astro.url.href,
} = Astro.props;

const siteName = 'fcoterroba';
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content={siteName} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <style>
      @font-face {
        font-family: 'Titillium Web';
        src: url('/TitilliumWeb-SemiBold.ttf') format('truetype');
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }
    </style>

    <script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'GA_MEASUREMENT_ID');
    </script>
  </head>
  <body class="bg-white dark:bg-dark-900 text-gray-900 dark:text-gray-100 font-sans antialiased">
    <nav class="fixed top-0 left-0 right-0 z-40 bg-white dark:bg-dark-900">
      <div class="max-w-6xl mx-auto px-8 lg:px-12">
        <div class="flex items-center justify-between h-20">
          <div class="flex items-center space-x-4">
            <img 
              src="/isologo.svg" 
              alt="Fco Terroba Logo" 
              class="h-8 w-auto"
            />
            <span class="text-brand-gray dark:text-white text-xl font-logo font-semibold">fcoterroba</span>
          </div>
          
          <ul class="flex items-center space-x-8">
            <li><a href="/" class="text-brand-gray dark:text-white font-normal hover:text-brand-green transition-colors">Inicio</a></li>
            <li><a href="#portfolio" class="text-brand-gray dark:text-white font-normal hover:text-brand-green transition-colors">Portfolio</a></li>
            <li><a href="/blog" class="text-brand-gray dark:text-white font-normal hover:text-brand-green transition-colors">Blog</a></li>
            <li><a href="#agradecimientos" class="text-brand-gray dark:text-white font-normal hover:text-brand-green transition-colors">Agradecimientos</a></li>
            <li><a href="#contacto" class="text-brand-gray dark:text-white font-normal hover:text-brand-green transition-colors">Contacto</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Language Switcher -->
    <div class="fixed bottom-8 right-8 z-40">
      <div class="flex items-center space-x-2 bg-white/95 dark:bg-dark-800/95 backdrop-blur-sm rounded-full px-4 py-2 shadow-lg border border-gray-200 dark:border-gray-700">
        <a 
          href="/" 
          class={`px-3 py-1 rounded-full text-sm font-medium transition-colors ${
            lang === 'es' 
              ? 'bg-brand-green text-white' 
              : 'text-brand-gray dark:text-gray-300 hover:text-brand-green'
          }`}
        >
          ES
        </a>
        <a 
          href="/en" 
          class={`px-3 py-1 rounded-full text-sm font-medium transition-colors ${
            lang === 'en' 
              ? 'bg-brand-green text-white' 
              : 'text-brand-gray dark:text-gray-300 hover:text-brand-green'
          }`}
        >
          EN
        </a>
      </div>
    </div>

    <!-- Skip to main content -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-500 text-white px-4 py-2 rounded-md z-50"
    >
      Saltar al contenido principal
    </a>

    <!-- Main Content -->
    <main id="main-content" class="pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-dark-900 text-gray-300 py-12 mt-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold text-white mb-4">{siteName}</h3>
            <p class="text-gray-400 leading-relaxed">
              {lang === 'es' 
                ? 'Desarrollador web apasionado por crear experiencias digitales excepcionales.' 
                : 'Web developer passionate about creating exceptional digital experiences.'
              }
            </p>
          </div>
          
          <div>
            <h4 class="text-lg font-semibold text-white mb-4">
              {lang === 'es' ? 'Enlaces' : 'Links'}
            </h4>
            <ul class="space-y-2">
              <li><a href="/" class="hover:text-primary-400 transition-colors">{lang === 'es' ? 'Inicio' : 'Home'}</a></li>
              <li><a href="/blog" class="hover:text-primary-400 transition-colors">Blog</a></li>
              <li><a href="/about" class="hover:text-primary-400 transition-colors">{lang === 'es' ? 'Acerca de' : 'About'}</a></li>
              <li><a href="/contact" class="hover:text-primary-400 transition-colors">{lang === 'es' ? 'Contacto' : 'Contact'}</a></li>
            </ul>
          </div>
          
          <div>
            <h4 class="text-lg font-semibold text-white mb-4">
              {lang === 'es' ? 'Sígueme' : 'Follow me'}
            </h4>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors">
                <span class="sr-only">GitHub</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors">
                <span class="sr-only">LinkedIn</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors">
                <span class="sr-only">Twitter</span>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <div class="border-t border-gray-700 mt-8 pt-8 text-center">
          <p class="text-gray-400">
            © 2025 {siteName}. {lang === 'es' ? 'Todos los derechos reservados.' : 'All rights reserved.'}
          </p>
        </div>
      </div>
    </footer>

    <!-- GSAP Script -->
    <script>
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      
      gsap.registerPlugin(ScrollTrigger);
      
      // Initialize animations when DOM is loaded
      document.addEventListener('DOMContentLoaded', () => {
        // Fade in animation for main content
        gsap.fromTo('main', 
          { opacity: 0, y: 20 },
          { opacity: 1, y: 0, duration: 0.8, ease: 'power2.out' }
        );
        
        // Animate elements with data-animate attribute
        gsap.utils.toArray('[data-animate]').forEach((element: any) => {
          const delay = element.dataset.delay || 0;
          const direction = element.dataset.direction || 'up';
          
          let fromProps: any = { opacity: 0 };
          if (direction === 'up') fromProps.y = 30;
          if (direction === 'left') fromProps.x = -30;
          if (direction === 'right') fromProps.x = 30;
          
          gsap.fromTo(element, 
            fromProps,
            {
              opacity: 1,
              x: 0,
              y: 0,
              duration: 0.8,
              delay: parseFloat(delay),
              ease: 'power2.out',
              scrollTrigger: {
                trigger: element,
                start: 'top 80%',
                toggleActions: 'play none none reverse'
              }
            }
          );
        });
      });
    </script>
  </body>
</html>
