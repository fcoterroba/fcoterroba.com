        --footer-text: #ffffff;
        --footer-title: #ffffff;
        --footer-link: rgba(255, 255, 255, 0.8);
        --footer-social: rgba(255, 255, 255, 0.8);
        --footer-border: rgba(255, 255, 255, 0.2);
        --footer-copyright: rgba(255, 255, 255, 0.6);
        --preferences-bg: rgba(0, 0, 0, 0.95);
        --preferences-border: rgba(255, 255, 255, 0.1);
        --preferences-separator: rgba(255, 255, 255, 0.1);
        --btn-active: #10b981;
        --btn-inactive: #a1a1aa;
