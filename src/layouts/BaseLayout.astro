    <script>
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      
      gsap.registerPlugin(ScrollTrigger);
      
      document.addEventListener('DOMContentLoaded', () => {
        initializePreferences();
        setupMobileMenu();
        
        gsap.fromTo('main', 
          { opacity: 0, y: 20 },
          { opacity: 1, y: 0, duration: 0.8, ease: 'power2.out' }
        );
        
        gsap.utils.toArray('[data-animate]').forEach((element: any) => {
          const delay = element.dataset.delay || 0;
          const direction = element.dataset.direction || 'up';
          
          let fromProps: any = { opacity: 0 };
          if (direction === 'up') fromProps.y = 30;
          if (direction === 'left') fromProps.x = -30;
          if (direction === 'right') fromProps.x = 30;
          
          gsap.fromTo(element, 
            fromProps,
            {
              opacity: 1,
              x: 0,
              y: 0,
              duration: 0.8,
              delay: parseFloat(delay),
              ease: 'power2.out',
              scrollTrigger: {
                trigger: element,
                start: 'top 80%',
                toggleActions: 'play none none reverse'
              }
            }
          );
        });
      });

      function initializePreferences() {
        const browserLang = navigator.language.startsWith('es') ? 'es' : 'en';
        
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

        const currentPath = window.location.pathname;
        const isBlogPost = currentPath.startsWith('/blog/') && currentPath !== '/blog';
        
        if (!isBlogPost) {
          const storedLang = localStorage.getItem('fcoterroba-lang') || browserLang;
          applyLanguage(storedLang);
        } else {
          const currentSlug = currentPath.replace('/blog/', '');
          const postLang = currentSlug.endsWith('-es') ? 'es' : 'en';
          updateLanguageUI(postLang);
        }
        
        const storedTheme = localStorage.getItem('fcoterroba-theme') || (prefersDark ? 'dark' : 'light');
        applyTheme(storedTheme);
        setupPreferenceListeners();
      }

      function updateLanguageUI(lang: string) {
        document.documentElement.lang = lang;
        
        document.querySelectorAll('[data-es][data-en]').forEach(element => {
          const htmlElement = element as HTMLElement;
          const text = htmlElement.dataset[lang];
          if (text) {
            if (text.includes('<span') || text.includes('<br')) {
              htmlElement.innerHTML = text;
            } else {
              htmlElement.textContent = text;
            }
          }
        });
        
        document.querySelectorAll('.lang-btn').forEach(btn => {
          const button = btn as HTMLElement;
          button.classList.toggle('active', button.dataset.lang === lang);
        });
      }

      function applyLanguage(lang: string) {
        document.documentElement.lang = lang;

        const currentPath = window.location.pathname;
        if (currentPath.startsWith('/blog/') && currentPath !== '/blog') {
          const currentSlug = currentPath.replace('/blog/', '');
          const baseSlug = currentSlug.replace(/-es$|-en$/, '');
          const newSlug = `${baseSlug}-${lang}`;

          if (currentSlug !== newSlug) {
            window.location.href = `/blog/${newSlug}`;
            return;
          }
        }
        
        document.querySelectorAll('[data-es][data-en]').forEach(element => {
          const htmlElement = element as HTMLElement;
          const text = htmlElement.dataset[lang];
          if (text) {
            if (text.includes('<span') || text.includes('<br')) {
              htmlElement.innerHTML = text;
            } else {
              htmlElement.textContent = text;
            }
          }
        });
        
        document.querySelectorAll('.lang-btn').forEach(btn => {
          const button = btn as HTMLElement;
          button.classList.toggle('active', button.dataset.lang === lang);
        });
        
        localStorage.setItem('fcoterroba-lang', lang);

        document.dispatchEvent(new CustomEvent('languageChanged', { detail: { lang } }));
      }

      function applyTheme(theme: string) {
        document.documentElement.setAttribute('data-theme', theme);
        
        document.querySelectorAll('.theme-btn').forEach(btn => {
          const button = btn as HTMLElement;
          button.classList.toggle('active', button.dataset.theme === theme);
        });
        
        localStorage.setItem('fcoterroba-theme', theme);
      }

      function setupMobileMenu() {
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuToggle && mobileMenu) {
          mobileMenuToggle.addEventListener('click', () => {
            const isHidden = mobileMenu.classList.contains('hidden');
            
            if (isHidden) {
              mobileMenu.classList.remove('hidden');
              mobileMenu.style.animation = 'slideDown 0.3s ease-out';
            } else {
              mobileMenu.style.animation = 'slideUp 0.3s ease-out';
              setTimeout(() => {
                mobileMenu.classList.add('hidden');
              }, 300);
            }
          });

          mobileMenu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
              mobileMenu.style.animation = 'slideUp 0.3s ease-out';
              setTimeout(() => {
                mobileMenu.classList.add('hidden');
              }, 300);
            });
          });
        }
      }

      function setupPreferenceListeners() {
        document.querySelectorAll('.lang-btn').forEach(btn => {
          btn.addEventListener('click', () => {
            const button = btn as HTMLElement;
            const lang = button.dataset.lang;
            if (lang) applyLanguage(lang);
          });
        });
        
        document.querySelectorAll('.theme-btn').forEach(btn => {
          btn.addEventListener('click', () => {
            const button = btn as HTMLElement;
            const theme = button.dataset.theme;
            if (theme) applyTheme(theme);
          });
        });
        
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
          const storedTheme = localStorage.getItem('fcoterroba-theme');
          if (!storedTheme) {
            applyTheme(e.matches ? 'dark' : 'light');
          }
        });
      }
    </script>

    <div id="cookie-banner" class="fixed inset-x-0 bottom-0 z-40 hidden">
      <div class="mx-auto max-w-7xl px-4 sm:px-8 pb-6">
        <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 shadow-2xl rounded-2xl p-5 sm:p-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div class="text-sm sm:text-base theme-text">
            <p class="leading-6">
              <span data-es="Usamos cookies anal√≠ticas opcionales para entender el uso y mejorar la web. Puedes aceptarlas o rechazarlas." data-en="We use optional analytics cookies to understand usage and improve the site. You can accept or reject them.">We use optional analytics cookies to understand usage and improve the site. You can accept or reject them.</span>
              <a href="/cookies" class="underline text-brand-green ml-1" data-es="M√°s info" data-en="More info">More info</a>
            </p>
          </div>
          <div class="flex items-center gap-2 sm:gap-3">
            <button id="cookie-reject" class="px-4 py-2 rounded-full border border-gray-300 dark:border-gray-600 theme-text hover:bg-gray-50 dark:hover:bg-gray-800 text-sm sm:text-base" data-es="Rechazar" data-en="Reject">Reject</button>
            <button id="cookie-accept" class="px-4 py-2 rounded-full bg-brand-green text-white hover:bg-brand-green/90 text-sm sm:text-base" data-es="Aceptar" data-en="Accept">Accept</button>
          </div>
